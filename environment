cd ~
if [ ! -d "$HOME/Environment/.git/" ]; then
	git clone https://github.com/DanielVoogsgerd/dotfiles.git Environment
else
	cd Environment
fi

cd Environment
git submodule init
git submodule update
git pull

git config --global user.name "Daniel Voogsgerd"
git config --global user.email "daniel@voogsgerd.nl"

python link.py Server

curl https://raw.github.com/creationix/nvm/master/install.sh | sh
\curl -L https://get.rvm.io | bash -s stable

