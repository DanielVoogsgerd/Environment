client.focused #0088CC #0088CC #ffffff #dddddd
client.focused_inactive #333333 #333333 #ffffff #292d2e
client.unfocused #333333 #333333 #FFFFFF #292d2e
client.urgent #2f343a #900000 #ffffff #900000

# i3 gaps
gaps inner 20
gaps outer 20
smart_gaps on
smart_borders on


