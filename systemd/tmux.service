[Unit]
Description=tmux
Documentation=
Requires=

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/tmux new-session -d -s %H
#ExecStartPost=/usr/bin/tmux source-file /home/%u/.config/tmux/sessions/default
ExecStop=/usr/bin/tmux kill-server
Environment=DISPLAY=:0
KillMode=none

[Install]
WantedBy=default.target
